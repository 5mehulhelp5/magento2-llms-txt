<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="llmstxtResultPage" type="Magento\Framework\View\Result\Page">
        <arguments>
            <argument name="template" xsi:type="string">SR_LlmsTxt::llmstxt-manual.phtml</argument>
        </arguments>
    </virtualType>
    <virtualType name="llmstxtResultPageFactory" type="Magento\Framework\View\Result\PageFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">llmstxtResultPage</argument>
        </arguments>
    </virtualType>

    <virtualType name="llmstxtGeneratedResultPage" type="Magento\Framework\View\Result\Page">
        <arguments>
            <argument name="template" xsi:type="string">SR_LlmsTxt::llmstxt-generated.phtml</argument>
        </arguments>
    </virtualType>
    <virtualType name="llmstxtGeneratedResultPageFactory" type="Magento\Framework\View\Result\PageFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">llmstxtGeneratedResultPage</argument>
        </arguments>
    </virtualType>

    <type name="SR\LlmsTxt\Controller\Index\Index">
        <arguments>
            <argument name="manualResultPageFactory" xsi:type="object">llmstxtResultPageFactory</argument>
            <argument name="generatedResultPageFactory" xsi:type="object">llmstxtGeneratedResultPageFactory</argument>
        </arguments>
    </type>


    <type name="Magento\Framework\App\RouterList">
        <arguments>
            <argument name="routerList" xsi:type="array">
                <item name="llmstxt" xsi:type="array">
                    <item name="class" xsi:type="string">SR\LlmsTxt\Controller\Router\LlmsTxtRouter</item>
                    <item name="disable" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="string">22</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
